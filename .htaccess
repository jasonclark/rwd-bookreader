#add handler that allows html to work dynamically as PHP
#https://httpd.apache.org/docs/current/mod/mod_mime.html#addhandler
AddType application/x-httpd-php .html
#AddHandler x-httpd-php5 .php .html

#serve all resources labeled as 'text/html' or 'text/plain' with the media type 'charset' parameter set to UTF-8'
#https://httpd.apache.org/docs/current/mod/core.html#adddefaultcharset
AddDefaultCharset utf-8

#compress html, css, javascript, font, and miscellaneous data files
#https://httpd.apache.org/docs/current/mod/mod_deflate.html
<IfModule mod_deflate.c>
AddOutputFilterByType DEFLATE "text/css" "text/html" "text/javascript" "text/plain" "text/xml" "application/x-javascript" "application/javascript" "application/json" "application/ld+json" "application/rdf+xml" "application/rss+xml" "application/x-font-woff" "application/x-font-ttf" "font/eot" "font/opentype"
</IfModule>
